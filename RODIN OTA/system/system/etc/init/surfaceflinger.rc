service surfaceflinger /system/bin/surfaceflinger
    class core animation
    user system
    # MIUI ADD: Display_Framerate
    group system graphics drmrpc readproc input
    # END Display_Framerate
    capabilities SYS_NICE
    onrestart restart --only-if-running zygote
    task_profiles HighPerformance
    # MIUI ADD: Performance_UnfairMem
    writepid /proc/mi_mem_engine/sf_pid
    # END Performance_UnfairMem
    # MIUI ADD: Performance_TurboSched
    writepid /sys/module/metis/parameters/common_persist_vip_task
    # END Performance_TurboSched

